{
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "script"
  },
  "rules": {
    "semi": ["error", "never"],
    "space-before-function-paren": ["error", "always"],
    "max-len": ["error", 200],
    "no-shadow": 0,
    "no-param-reassign": 0,
    "linebreak-style": ["error", "windows"], // remove if not on windows
    "strict": ["error", "global"]
  }
}